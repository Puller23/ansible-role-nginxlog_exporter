[Unit]
Description=NGINX metrics exporter for Prometheus
After=network-online.target

[Service]
User={{ nginxlog_exporter_system_user }}
Group={{ nginxlog_exporter_system_group }}
ExecStart={{ _nginxlog_exporter_binary }} -config-file {{ nginxlog_exporter_config_dir }}/{{ nginxlog_exporter_config_file }}
Restart=always
ProtectSystem=full
CapabilityBoundingSet=

[Install]
WantedBy=multi-user.target